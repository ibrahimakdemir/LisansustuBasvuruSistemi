                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GraduateMajorId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LanguageId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StartDate.Year)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EndDate.Year)
