@using System.Security.Claims
<nav class="navbar navbar-expand-lg bg-body-tertiary navbar-dark " style="background-color:#476662">
    <div class="container-fluid">
        <div class="navbar-brand navbar-text col-2 text-white fw-bolder">

            @if (User.Identity.IsAuthenticated && User.IsInRole("Aday"))
            {
                <a class="nav-link" asp-action="Index" asp-controller="Applicant">
                    <img src="/img/logo.svg" alt="Logo" width="96" height="32">
                </a>
            }
            else if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
                <a class="nav-link" asp-action="Index" asp-controller="Admin">
                    <img src="/img/logo.svg" alt="Logo" width="96" height="32">
                </a>
            }
            else
            {
                <a class="nav-link" asp-action="Index" asp-controller="Home">
                    <img src="/img/logo.svg" alt="Logo" width="96" height="32">
                </a>
            }


        </div>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-center" id="navbarNavAltMarkup">
            <div class="col-10  d-flex justify-content-lg-center justify-content-md-start">
                <ul class="navbar-nav fw-bold fs-5  text-white">
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Aday"))
                    {

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-action="Index" asp-controller="Applicant">Anasayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-action="ApplyToPrograms" asp-controller="Applicant">Başvuru yap</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-action="MyApplications" asp-controller="Applicant">Başvurularım</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-action="GetMyInformations" asp-controller="Applicant">Bilgilerim</a>
                        </li>
                    }
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-action="Index" asp-controller="Admin">Programlar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-action="CreateGraduateProgram" asp-controller="Admin">Program Ekle</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-action="GetApplications" asp-controller="Admin">Başvurular</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-action="GetMyInformations" asp-controller="Admin">Bilgilerim</a>
                        </li>
                    }
                </ul>
            </div>


            <div class="d-flex justify-content-end">
                @if (User.Identity.IsAuthenticated && User.IsInRole("Aday"))
                {
                    <a class="btn btn-danger me-2" type="button" asp-action="Logout" asp-controller="Applicant">Çıkış Yap</a>
                    <a class="btn btn-warning" type="button" asp-action="Help" asp-controller="Home">Yardım</a>

                }
                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <a class="btn btn-danger me-2" type="button" asp-action="Logout" asp-controller="Admin">Çıkış Yap</a>
                    <a class="btn btn-warning" type="button" asp-action="Help" asp-controller="Admin">Yardım Talepleri</a>
                }
                @if (!User.Identity.IsAuthenticated || User.IsInRole("Misafir"))
                {
                    <a class="btn btn-primary me-2" type="button" asp-action="Login" asp-controller="Home">Giriş</a>
                    <a class="btn btn-success me-2" type="button" asp-action="Register" asp-controller="Home">Kayıt Ol</a>
                    <a class="btn btn-warning" type="button" asp-action="Help" asp-controller="Home">Yardım</a>

                }
            </div>
        </div>
    </div>
</nav>

