@model IList<GraduateProgram>

@if (Model.Count() == 0)
{
    <div class="col-md-12 col-xl-12 justify-content-center" style="margin-top:50px">
        <div class="container mt-3">
            <div class="alert alert-danger" role="alert">
                Yapılmış herhangi bir başvuru bulunamadı!
            </div>
        </div>
    </div>
}
else
{
    <div class="col-md-12 col-xl-12 justify-content-center" style="margin-top:50px">
        <div class="container mt-3">
            <div class="rounded rounded-4 shadow-lg table-responsive border border-1  p-2 bg-light">
                <div class="text-center">
                    <h3 class="text-success">Başvuru Yapılan Programlar</h3>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Anabilim Dalı</th>
                            <th scope="col">Eğitim Dili</th>
                            <th scope="col">Kontenjan</th>
                            <th scope="col">Dönem</th>
                            <th scope="col">Eğitim Yılı</th>
                        </tr>
                    </thead>
                    <tbody class="table-group-divider">
                        @foreach (var program in Model)
                        {
                            <tr>
                                <td>@program.GraduateMajor.GraduateMajorName</td>
                                <td>@program.Language.LanguageName</td>
                                <td>@program.Capacity</td>
                                <td>@program.Semester</td>
                                <td>@program.AcademicYear</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
}

@section Scripts{
    <script>
        $(document).ready(function () {
            var message = '@ViewBag.Message';
            if (message !== ''){
                alertify.alert(message).set('basic', true);
            }
        });
    </script>

}


