@model UserRegisterModel

<div class="container-fluid" style="margin-top:200px">
    <div class="rounded d-flex justify-content-center">
        <div class="col-md-4 col-sm-12 shadow-lg p-5 bg-light">
            <div class="text-center">
                <h3 class="text-success">Kayıt İşlemini Tamamlama</h3>
            </div>
            <form asp-action="RegisterStepTwo">
                <input type="hidden" id="citizenId" name="CitizenId" value="@Model.CitizenId" />
                <input type="hidden" id="citizenNumber" name="CitizenNumber" value="@Model.CitizenNumber" />
                <div class="p-4">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="input-group mb-3">
                        <span class="input-group-text bg-success">
                            <i class="bi bi-person-vcard-fill text-white"></i>
                        </span>
                        <input type="email" class="form-control" id="mailAddress" name="EMail" required placeholder="E-Posta Adresi">
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text bg-success">
                            <i class="bi bi-person-vcard-fill text-white"></i>
                        </span>
                        <input type="password" class="form-control" id="password" name="Password" required placeholder="Şifre">
                    </div>
                    <div class="form-group mb-3">
                        <input class="btn btn-primary text-center mt-2 mx-auto" type="submit" id="registerBtn" value="Kayıt Ol" />
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>
