@using System.Globalization;
@model AnnouncementDisplayResponse

@{
    ViewData["Title"] = "Duyurular";
}


<div class="container-fluid " style="margin-top:50px">
    <div class="rounded d-flex justify-content-center">
        <div class="container rounded rounded-4 shadow-lg border border-1 p-2 bg-white">
            <div class="card border-0">
                <h5 class="card-title text-center fs-2 m-2">@Model.Title</h5>
                <img src="@Model.ImageURL" class="card-img-top container p-2 rounded rounded-2" alt="@Model.Title">
                <div class="card-body">
                    <p class="card-text">
                        <div class="row container">
                            <div class="col-lg-8 text-center rounded rounded-2 shadow-lg">
                                @Model.Message
                            </div>
                            <div class="col-lg-4 text-white">
                                <div class="card bg-success" style="max-width: 18rem;">
                                    <div class="card-header fs-4 text-center fw-bold">Tarihler</div>
                                    <div class="card-body text-center row">
                                        <div class="col-lg-6 border border-success border-2 rounded rounded-2 shadow-lg">
                                            <h5 class="card-title">Başlangıç</h5>
                                            <p class="card-text">@Model.StartDate.Value.ToString("dd MMMM yyyy", new CultureInfo("tr-TR"))<br />@Model.StartDate.Value.ToString("HH:mm")</p>
                                        </div>
                                        <div class="col-lg-6 border border-success border-2 rounded rounded-2 shadow-lg">
                                            <h5 class="card-title">Bitiş</h5>
                                            <p class="card-text">@Model.EndDate.Value.ToString("dd MMMM yyyy", new CultureInfo("tr-TR"))<br />@Model.EndDate.Value.ToString("HH:mm")</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </p>
                </div>
            </div>

        </div>
    </div>
</div>





